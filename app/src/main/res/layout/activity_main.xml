<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DefaultColor"
    tools:context=".BoundaryClasses.ActivitiesClasses.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <LinearLayout
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ecopet"
            android:layout_width="230dp"
            android:layout_height="180dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="BEM VINDO AO ECOPET QUIXADÁ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:text="ALGUMA FRASE DE EFEITO OU ALGO DO TIPO "
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/AppColor"
            android:text="ENTRAR"
            android:background="@drawable/corner_transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:text="CADASTRAR - SE"
            android:background="@drawable/corner_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include
        android:visibility="gone"
        layout="@layout/loading"/>
    

</RelativeLayout>
