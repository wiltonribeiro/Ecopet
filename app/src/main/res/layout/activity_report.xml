<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DefaultColor"
    tools:context="com.ecopet.will.ecopet.BoundaryClasses.ActivitiesClasses.ReportActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Denunciar Imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:text="Por que vocÃª deseja denunciar essa imagem ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerReport"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnReport"
            android:textColor="#fff"
            android:background="@drawable/corner_google"
            android:text="DENUNCIAR"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include
        layout="@layout/loading"
        android:visibility="gone"/>

</RelativeLayout>
