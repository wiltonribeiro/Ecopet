<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DefaultColor"
    tools:context=".BoundaryClasses.ActivitiesClasses.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="MENU"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEditProfile"
            android:textColor="#808080"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:text="Editar Perfil"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnEditPassword"
            android:textColor="#808080"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:text="Editar Senha"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnContact"
            android:textColor="#808080"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:text="Entrar em Contato Concosco"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:text="Apagar Conta"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnLogOut"
            android:textColor="#808080"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:text="Sair"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Organização:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ecopet"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/logo_quixada"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/logo_ufc"
                android:layout_width="90dp"
                android:layout_height="70dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
