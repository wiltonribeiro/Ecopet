<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ecopet.will.ecopet.BoundaryClasses.ActivitiesClasses.ContactActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ecopet"
            android:layout_width="210dp"
            android:layout_height="120dp" />
        <TextView
            android:textAlignment="center"
            android:text="CONTATE-NOS:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="petccqx@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textSize="12sp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:text="Desenvolvido pelo PET-TI da Universidade Federal do Ceará - Campus Quixadá"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
